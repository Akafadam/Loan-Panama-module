<odoo>
    <data>
        <record id="view_loan_form" model="ir.ui.view">
            <field name="name">loan.form</field>
            <field name="model">loan.loan</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Loan">
                    <header>
                        <button name="action_loan_payment_wizard" type="object" string="Register Payment"/>
                        <field name="status" widget="statusbar" statusbar_visible="draft,active,defaulter,closed"/>
                    </header>
                    <sheet>
                        <group string="Customer Information" col="2">
                            <field name="partner_id"/>
                            <field name="credit_officer"/>
                            <field name="account"/>
                            <field name="loan_type"/>
                            <field name="income_source"/>
                        </group>
                        <group string="Loan Information" col="2">
                            <field name="name"/>
                            <field name="term_months"/>
                            <field name="monthly_installment"/>
                            <field name="dealer"/>
                        </group>
                        <group string="Financial Conditions" col="2">
                            <field name="principal_amount"/>
                            <field name="current_balance" readonly="1"/>
                            <field name="annual_interest_rate"/>
                            <field name="annual_feci_rate"/>
                            <field name="feci_threshold"/>
                            <field name="feci_exempt"/>
                            <field name="disbursement_date"/>
                            <field name="next_due_date"/>
                            <field name="payment_frequency"/>
                        </group>
                        <group string="Collateral / Guarantee">
                            <field name="collateral"/>
                        </group>
                        <group string="Notes">
                            <field name="notes"/>
                        </group>
                        <notebook>
                            <page string="Amortization / Payments">
                                <field name="loan_line_ids">
                                    <list string="Loan Lines" create="0">
                                        <field name="movement_date"/>
                                        <field name="paid_amount"/>
                                        <field name="feci"/>
                                        <field name="interest"/>
                                        <field name="capital_payment"/>
                                        <field name="principal_balance"/>
                                        <field name="next_due_date"/>
                                        <field name="notes"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Other Charges">
                                <field name="other_charge_ids" nolabel="1">
                                    <list string="Other Charges">
                                        <field name="creation_date"/>
                                        <field name="description"/>
                                        <field name="amount"/>
                                        <field name="pending_balance"/>
                                        <field name="due_date"/>
                                    </list>
                                </field>
                            </page>

                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_loan_list" model="ir.ui.view">
            <field name="name">loan.list</field>
            <field name="model">loan.loan</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Loans">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="principal_amount"/>
                    <field name="current_balance"/>
                    <field name="annual_interest_rate"/>
                    <field name="annual_feci_rate"/>
                    <field name="next_due_date"/>
                    <field name="status"/>
                </list>
            </field>
        </record>
        <record id="action_loan" model="ir.actions.act_window">
            <field name="name">Loans</field>
            <field name="res_model">loan.loan</field>
            <field name="view_mode">list,form</field>
        </record>
        <menuitem id="menu_loan_root" name="Loans" sequence="10"/>
        <menuitem id="menu_loan_management" name="Loan Management" parent="menu_loan_root" action="action_loan"/>
    </data>
</odoo>